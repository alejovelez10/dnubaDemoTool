<p id="notice"><%= notice %></p>

<h1 align="center">Acta</h1>
<br>
<table class="table" style="padding: ">
  <thead class="table-primary">
    <tr >
      <th>Fecha</th>
      <th>observaciones</th>
      <th>Entrego</th>
      <th>Recibio</th>
      <th colspan="3"><%= link_to 'Nueva Acta', new_actum_path, class: "btn btn-primary", style: "float: right;" %></th>
    </tr>
  </thead>

  <tbody>
    <% @acta.each do |actum| %>
      <tr>
        <td><%= get_only_date(actum.fecha) %></td>
        <td><%= actum.description %></td>
        <td><%= actum.employed.name %></td>
        <td><%= actum.employed.name%></td>

        <td style="float: right;">

          <%= link_to actum, class: "btn btn-primary", title: "Ver" do %>
             <i class="far fa-eye"></i>
          <% end -%>

          <%= link_to acta_pdf_path(actum.id, :format => "pdf"), target:"_blank", class: "btn btn-info", title: "Generar Pdf" do%>
            <i class="far fa-file-pdf"></i>
          <% end -%>

          <%= link_to edit_actum_path(actum), class: "btn btn-primary", title: "Editar" do %>
            <i class="fas fa-pencil-alt"></i>
          <% end -%>

          <%= link_to  actum, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger", title: "Elininar" do %>
            <i class="fas fa-trash-alt"></i>
          <% end -%>
          
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<style type="text/css">
  td img{
    width: 56px;
  }
</style>